<input type="hidden" value="<%= user_id%>" />
<div id="main_container" class="container">
	<div class="row">
		
		<div class="fourcol left">
			<div class="col_title">Accomplished: </div>
			<input id="accomplished_input" class="top_input" type="text" />
		</div>
		<div class="fourcol center">
			<div class="col_title">Regret: </div>
			<input id="regret_input" class="top_input" type="text" />

		</div>
		<div class="fourcol last right">
			<div class="col_title">Goals: </div>
			<input id="goals_input" class="top_input" type="text" />
		</div>
		
		
	</div>
	<div id="data_container">
		<div class="row">
			<div class="twelvecol last">
				<div class="date">Loading data...</div>
			</div>
		</div>
	</div>
	<!-- day rows are inserted here-->
	
</div>

<script id="day_template" type="text/x-jquery-tmpl">
	<div class="row">
		<div class="date">
			${date_string}
		</div>
	</div>
    <div class="row">
		<div class="fourcol left">
			<ul>
				{{each accomplished}}<li>${$value}</li>{{/each}}
			</ul>
		</div>

		<div class="fourcol center">
			<ul>
				{{each regret}}<li>${$value}</li>{{/each}}
			</ul>
		</div>

		<div class="fourcol right last">
			<ul>
				{{each goals}}<li>${$value}</li>{{/each}}
			</ul>
		</div>
	</div>
</script>



